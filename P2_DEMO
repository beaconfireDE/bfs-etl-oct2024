CREATE_TABLE_DIM_STOCK_STATIC = f"""
CREATE TABLE IF NOT EXISTS {SNOWFLAKE_DATABASE}.{SNOWFLAKE_SCHEMA}.DIM_STOCK_STATIC (
    SYMBOL VARCHAR PRIMARY KEY,
    EXCHANGE VARCHAR
);
"""

CREATE_TABLE_SCD_COMPANY_PROFILE = f"""
CREATE TABLE IF NOT EXISTS {SNOWFLAKE_DATABASE}.{SNOWFLAKE_SCHEMA}.SCD_COMPANY_PROFILE (
    SCD_ID NUMBER PRIMARY KEY,
    SYMBOL VARCHAR,
    NAME VARCHAR,
    COMPANYNAME VARCHAR,
    WEBSITE VARCHAR,
    PRICE FLOAT,
    BETA FLOAT,
    VOLAVG INT,
    MKTCAP FLOAT,
    LASTDIV FLOAT,
    RANGE VARCHAR,
    CHANGES FLOAT,
    CEO VARCHAR,
    INDUSTRY VARCHAR,
    SECTOR VARCHAR,
    DESCRIPTION VARCHAR,
    DCFDIFF FLOAT,
    DCF FLOAT,
    Start_Date DATE,
    End_Date DATE
);
"""

CREATE_TABLE_FACT_STOCK_HISTORY = f"""
CREATE TABLE IF NOT EXISTS {SNOWFLAKE_DATABASE}.{SNOWFLAKE_SCHEMA}.FACT_STOCK_HISTORY (
    SYMBOL VARCHAR,
    DATE DATE,
    OPEN FLOAT,
    HIGH FLOAT,
    LOW FLOAT,
    CLOSE FLOAT,
    VOLUME INT,
    ADJCLOSE FLOAT
);
"""
